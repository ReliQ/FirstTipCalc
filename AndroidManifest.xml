<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reliqartz.firsttipcalc"
    android:versionCode="19"
    android:versionName="0.9.0 beta rEvA" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    
    <supports-screens android:largestWidthLimitDp="600" />

    <application
        android:allowBackup="true"
        android:description="@string/app_description"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.reliqartz.firsttipcalc.MainActivity"
            android:label="@string/app_name" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.reliqartz.firsttipcalc.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.reliqartz.firsttipcalc.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.reliqartz.firsttipcalc.MainActivity" />
        </activity>
    </application>

</manifest>
