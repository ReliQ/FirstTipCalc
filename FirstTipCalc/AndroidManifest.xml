<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reliqartz.firsttipcalc"
    android:versionCode="18"
    android:versionName="0.8.0 beta" >
	
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <supports-screens 
    	android:largestWidthLimitDp="600"/>
    
    <application
        android:allowBackup="true"
        android:description="@string/app_description"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.reliqartz.firsttipcalc.CrazyTipCalc"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <!-- android:windowSoftInputMode="stateHidden" -->
            
            <intent-filter android:label="@string/app_shortname" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.reliqartz.firsttipcalc.Preferences"
            android:label="@string/title_activity_preferences"
            android:parentActivityName="com.reliqartz.firsttipcalc.CrazyTipCalc" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.reliqartz.firsttipcalc.CrazyTipCalc" />
        </activity>
    </application>

</manifest>
