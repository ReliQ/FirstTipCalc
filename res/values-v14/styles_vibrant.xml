<resources>

    <style name="Theme.Vibrant" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_vibrant</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Vibrant</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Vibrant</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Vibrant</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBar.TabTextStyle</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Vibrant</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Vibrant</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_vibrant</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_vibrant</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Vibrant</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Vibrant.Widget</item>

    </style>

    <style name="ActionBar.Solid.Vibrant" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_vibrant</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_vibrant</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_vibrant</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Vibrant</item>
    </style>

    <style name="ActionBar.Transparent.Vibrant" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_vibrant</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Vibrant</item>
    </style>

    <style name="PopupMenu.Vibrant" parent="@style/PopupMenu.FTC">
    </style>

    <style name="DropDownListView.Vibrant" parent="DropDownListView.FTC">
    </style>

    <style name="ActionBarTabStyle.Vibrant" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_vibrant</item>
    </style>

    <style name="DropDownNav.Vibrant" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_vibrant</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_vibrant</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_vibrant</item>
    </style>
    
    <style name="ProgressBar.Vibrant" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_vibrant</item>
    </style>
    
    <style name="ActionButton.CloseMode.Vibrant" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_vibrant</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Vibrant.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Vibrant</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Vibrant</item>
    </style>

</resources>